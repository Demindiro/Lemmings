0xa3691cc8b5ec1fad 0x9566d3fc16c2b763 Sys Door find
if dup 0 = then
	"Failed to find interrupt door" Sys panic
end
: interrupt-door ! const ;
: interrupt->wait    0 interrupt-door Sys Door call:1->0 ;
: interrupt->acquire 1 interrupt-door Sys Door call:0->1 ;
: interrupt->release 2 interrupt-door Sys Door call:1->0 ;

: IO_DATA    0x60 ;
: IO_STATUS  0x64 ;
: IO_COMMAND 0x64 ;

: STATUS_OUTPUT_FULL 0 ;
: STATUS_INPUT_FULL  1 ;

: TIMEOUT_MS 100 ;

: ps2_read    IO_DATA    X86 Io in8  ;
: ps2_write   IO_DATA    X86 Io out8 ;
: ps2_status  IO_STATUS  X86 Io in8  ;
: ps2_command IO_COMMAND X86 Io out8 ;

